# LanceDB MLOps Framework Configuration

# Core Settings
LANCEDB_PATH=~/.lancedb
MODELS_DIR=./models
TEMP_DIR=./temp

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=info

# n8n.io Integration
N8N_BASE_URL=http://localhost:5678/webhook/
N8N_WORKFLOWS_DIR=./workflows

# Feature Toggles (true/false)
ENABLE_AB_TESTING=false
ENABLE_DRIFT_DETECTION=false
ENABLE_EXPERIMENT_TRACKING=false
ENABLE_AUTOMATIC_RETRAINING=false
ENABLE_MODEL_MONITORING=true

# Model Default Settings
DEFAULT_MODEL_TYPE=classifier
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Database Settings (Optional - for database connectors)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=password
# DB_NAME=mlops

# Security Settings
API_KEY_ENABLED=false
# API_KEY=your-secret-api-key

# Notification Settings
ENABLE_NOTIFICATIONS=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
# EMAIL_NOTIFICATIONS=admin@example.com

# Performance Settings
BATCH_SIZE=32
MAX_WORKERS=4

# Storage Settings
USE_S3_STORAGE=false
# S3_BUCKET=mlops-models
# S3_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Docker Settings
DOCKER_NETWORK_NAME=lancedb-mlops-network
DOCKER_DATA_VOLUME=lancedb-mlops-data
